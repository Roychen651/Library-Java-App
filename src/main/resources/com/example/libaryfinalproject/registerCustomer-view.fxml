<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #5F9EA0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libaryfinalproject.registerCustomerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox prefHeight="200.0" prefWidth="500.0">
      <children>
         <Button mnemonicParsing="false" style="-fx-background-color: #8FBC8F;" text="חזור" onAction="#onbackButtonClick" />
      </children>
   </VBox>
    <Label text="מסך הרשמה - בחר שם משתמש וסיסמא">
      <font>
         <Font name="Arial Bold" size="22.0" />
      </font></Label>
    <Label text="שם משתמש">
      <font>
         <Font name="Arial Bold" size="12.0" />
      </font></Label>
    <TextField fx:id="usernameField" />

    <Label text="סיסמא">
      <font>
         <Font name="Arial Bold" size="12.0" />
      </font></Label>
    <PasswordField fx:id="passwordField" />

    <Button alignment="CENTER" onAction="#sendRegistrationRequest" style="-fx-background-color: #8FBC8F;" text="הרשם" />

    <Label fx:id="welcomeText" />

    <!-- Adding the photo at the bottom -->
    <ImageView fitHeight="181.0" fitWidth="272.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../images/1.png" />
        </image>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
        </VBox.margin>
    </ImageView>
</VBox>
